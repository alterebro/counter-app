{
  "name": "counter-app",
  "version": "0.1.0",
  "description": "It's just a counter webApp, that counts and stores the countings...",
  "main": "src/main.js",
  "scripts": {
    "start": "NODE_ENV=development parcel src/app.html -d .localserver",
    "build": "NODE_ENV=production parcel build src/app.html --out-file index.html --public-url './' --no-cache --no-source-maps",
    "serve": "ip=`ipconfig getifaddr en0`; php -S $ip:8000 -t dist/",
    "clean": "rm -rf dist/* && rm -rf .localserver/*",
    "version": "npm run appversion && npm run build && git add version.json",
    "appversion": "PKG_VERSION=$(node -pe \"require('./package.json').version\") && D=`date +%Y%m%d%H%M%S` && echo '{ \"version\" : \"'$PKG_VERSION'\", \"build\" : \"'$D'\" }' > src/version.json",
    "postversion": "git push && git push --tags"
  },
  "alias": {
    "vue": "./node_modules/vue/dist/vue.common.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alterebro/counter-app.git"
  },
  "keywords": [],
  "author": "Jorge Moreno, moro.es (@alterebro)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/alterebro/counter-app/issues"
  },
  "homepage": "https://github.com/alterebro/counter-app#readme",
  "devDependencies": {
    "@vue/component-compiler-utils": "^3.1.2",
    "nosleep.js": "^0.9.0",
    "parcel-bundler": "^1.12.4",
    "sass": "^1.26.5",
    "tinytime": "^0.2.6",
    "vue-template-compiler": "^2.6.11"
  },
  "dependencies": {
    "vue": "^2.6.11",
    "vue-hot-reload-api": "^2.3.4"
  }
}
